<main class="container mt-5">
  <h1>Login</h1>
  <form id="login-form" method="POST" class="form needs-validation" novalidate>
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" name="username" type="text" class="form-control" value="{{username}}" required>
      <div class="invalid-feedback">
        Please enter your username.
      </div>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" name="password" type="password" class="form-control" value="{{password}}" required>
      <div class="invalid-feedback">
        Please enter your password.
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div class="form-group">
      <output class="text-danger">{{error}}</output>
    </div>
  </form>
</main>