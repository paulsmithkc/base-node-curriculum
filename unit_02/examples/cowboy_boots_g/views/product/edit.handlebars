<main class="container mt-5">
  <h1>
    Edit Product
  </h1>
  <form
    id="edit-product-form"
    method="PUT"
    action="/api/product/{{product.id}}"
    class="needs-validation"
    novalidate
  >
    <input id="id" name="id" type="hidden" value="{{product.id}}" />
    <div class="form-group">
      <label for="name">
        Name
      </label>
      <input
        id="name"
        name="name"
        class="form-control"
        type="text"
        value="{{product.name}}"
        required
        minlength="3"
        maxlength="100"
      />
      <div class="invalid-feedback">
        Please enter a name thats is at least 3 characters long.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <label for="category">
        Category
      </label>
      <input
        id="category"
        name="category"
        class="form-control"
        type="text"
        value="{{product.category}}"
        required
        minlength="3"
        maxlength="7"
      />
      <div class="invalid-feedback">
        Please enter a category thats is at least 3 characters long.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <label for="price">
        Price
      </label>
      <input
        id="price"
        name="price"
        class="form-control"
        type="number"
        value="{{product.price}}"
        required
        min="0"
        max="9999.99"
        step="0.01"
      />
      <div class="invalid-feedback">
        Please enter a valid price.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Save
      </button>
    </div>
    <div class="form-group">
      <output class="text-danger" style="white-space: pre-wrap;"></output>
    </div>
  </form>
</main>