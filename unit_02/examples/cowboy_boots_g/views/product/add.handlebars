<main class="container mt-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/product">Products</a></li>
      <li class="breadcrumb-item active" aria-current="page">Add Product</li>
    </ol>
  </nav>
  <h1>
    Add Product
  </h1>
  <form
    id="add-product-form"
    method="POST"
    action="/api/product"
    class="needs-validation"
    novalidate
  >
    <div class="form-group">
      <label for="name">
        Name
      </label>
      <input
        id="name"
        name="name"
        class="form-control"
        type="text"
        required
        minlength="3"
        maxlength="100"
      />
      <div class="invalid-feedback">
        Please enter a name thats is at least 3 characters long.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <label for="category">
        Category
      </label>
      <input
        id="category"
        name="category"
        class="form-control"
        type="text"
        required
        minlength="3"
        maxlength="7"
      />
      <div class="invalid-feedback">
        Please enter a category thats is at least 3 characters long.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <label for="price">
        Price
      </label>
      <input
        id="price"
        name="price"
        class="form-control"
        type="number"
        required
        min="0"
        max="9999.99"
        step="0.01"
      />
      <div class="invalid-feedback">
        Please enter a valid price.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Save
      </button>
    </div>
    <div class="form-group">
      <output class="text-danger" style="white-space: pre-wrap;"></output>
    </div>
  </form>
</main>