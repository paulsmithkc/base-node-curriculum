{{#each this}}
  <div class="card mb-3">
    <div class="card-body">
      <div class="card-title">
        <a href="/customer/{{id}}">
          {{family_name}}, {{given_name}}
        </a>
      </div>
      <div class="mb-2 text-monospace">
        {{email}}
      </div>
      <div class="mb-2">
        Registered {{fromNow register_date}}
      </div>
      <div class="mb-2">
        <span class="font-weight-bold">{{order_count}}</strong> 
        <span class="text-muted">orders placed</span>
      </div>
    </div>
  </div>
{{/each}}